<div class="container mt-4">
  <h1>Edit Patient</h1>
  <%= form_with(model: @patient, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :medical_history %>
      <%= form.text_area :medical_history, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.submit 'Update Patient', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
